---
import Layout from '../layouts/Layout.astro';

const programs = [
    {
        title: "Education & Awareness",
        description: "Comprehensive educational programs designed to increase understanding of sickle cell disease in schools, workplaces, and healthcare settings.",
        features: [
            "School Outreach Programs",
            "Healthcare Provider Training",
            "Community Workshops",
            "Educational Materials"
        ]
    },
    {
        title: "Support Groups",
        description: "Regular meetings and counseling sessions providing emotional support and practical advice for patients and families.",
        features: [
            "Monthly Support Meetings",
            "Family Counseling",
            "Peer Mentoring",
            "Crisis Support"
        ]
    },
    {
        title: "Medical Assistance",
        description: "Direct support for accessing medical care and treatment options for individuals with sickle cell disease.",
        features: [
            "Treatment Guidance",
            "Medical Bill Assistance",
            "Medication Support",
            "Emergency Care Access"
        ]
    },
    {
        title: "Research Initiatives",
        description: "Supporting and promoting research to improve treatments and find better solutions for sickle cell disease.",
        features: [
            "Research Grants",
            "Clinical Trial Information",
            "Data Collection",
            "Research Partnerships"
        ]
    }
];
---

<Layout title="Our Programs | Lewis Paul Foundation">
    <main>
        <section class="programs-hero">
            <div class="hero-content">
                <h1>Our Programs</h1>
                <p class="tagline">Making a Difference in the Sickle Cell Community</p>
            </div>
        </section>

        <section class="programs-content">
            <div class="container">
                {programs.map((program, index) => (
                    <div class="program-card">
                        <div class="program-info">
                            <h2>{program.title}</h2>
                            <p class="description">{program.description}</p>
                            <ul class="features">
                                {program.features.map(feature => (
                                    <li>{feature}</li>
                                ))}
                            </ul>
                            <a href="/contact" class="learn-more">Get Involved →</a>
                        </div>
                    </div>
                ))}
            </div>
        </section>
    </main>
</Layout>

<style>
    .programs-hero {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/programs-hero.jpg');
        background-size: cover;
        background-position: center;
        height: 50vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        margin-top: 64px;
    }

    .hero-content {
        max-width: 800px;
        padding: 2rem;
    }

    .hero-content h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .tagline {
        font-size: 1.5rem;
    }

    .programs-content {
        padding: 4rem 1rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        gap: 2rem;
    }

    .program-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .program-card:hover {
        transform: translateY(-5px);
    }

    .program-info {
        padding: 2rem;
    }

    h2 {
        color: #e53e3e;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .description {
        color: #4a5568;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .features {
        list-style: none;
        padding: 0;
        margin-bottom: 2rem;
    }

    .features li {
        padding: 0.5rem 0;
        color: #2d3748;
        position: relative;
        padding-left: 1.5rem;
    }

    .features li::before {
        content: "•";
        color: #e53e3e;
        position: absolute;
        left: 0;
    }

    .learn-more {
        display: inline-block;
        color: #e53e3e;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .learn-more:hover {
        color: #c53030;
    }

    @media (min-width: 768px) {
        .container {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>