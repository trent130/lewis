---
import Layout from '../layouts/Layout.astro';

const programs = [
    {
        title: "Education & Awareness",
        description: "Comprehensive educational programs designed to increase understanding of sickle cell disease in schools, workplaces, and healthcare settings.",
        features: [
            "School Outreach Programs",
            "Healthcare Provider Training",
            "Community Workshops",
            "Educational Materials"
        ]
    },
    {
        title: "Support Groups",
        description: "Regular meetings and counseling sessions providing emotional support and practical advice for patients and families.",
        features: [
            "Monthly Support Meetings",
            "Family Counseling",
            "Peer Mentoring",
            "Crisis Support"
        ]
    },
    {
        title: "Medical Assistance",
        description: "Direct support for accessing medical care and treatment options for individuals with sickle cell disease.",
        features: [
            "Treatment Guidance",
            "Medical Bill Assistance",
            "Medication Support",
            "Emergency Care Access"
        ]
    },
    {
        title: "Research Initiatives",
        description: "Supporting and promoting research to improve treatments and find better solutions for sickle cell disease.",
        features: [
            "Research Grants",
            "Clinical Trial Information",
            "Data Collection",
            "Research Partnerships"
        ]
    }
];
---

<Layout title="Our Programs | Lewis Paul Foundation">
    <main>
        <section class="hero-section relative h-[60vh] flex items-center justify-center">
            <div class="absolute inset-0 bg-black/60 z-10"></div>
            <div class="relative z-20 text-center px-4 max-w-4xl mx-auto">
                <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight animate__animated animate__fadeInDown">
                    Our Programs
                </h1>
                <p class="text-xl md:text-2xl text-gray-200 animate__animated animate__fadeInUp">
                    Making a Difference in the Sickle Cell Community
                </p>
            </div>
        </section>

        <section class="max-w-7xl mx-auto px-4 py-16">
            <div class="grid md:grid-cols-2 gap-8 -mt-32 relative z-30">
                {programs.map((program, index) => (
                    <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10 hover:shadow-2xl transition-shadow duration-300 animate__animated animate__fadeIn animate__slow">
                        <h2 class="text-2xl md:text-3xl font-bold text-purple-600 mb-4 animate__animated animate__fadeIn animate__slow animate__delay-1s">{program.title}</h2>
                        <p class="text-gray-700 mb-6 leading-relaxed animate__animated animate__fadeIn animate__slow animate__delay-2s">{program.description}</p>
                        <ul class="space-y-2 mb-8 animate__animated animate__fadeIn animate__slow animate__delay-3s">
                            {program.features.map(feature => (
                                <li class="flex flex-col items-center transition duration-300 transform hover:scale-105 hover:bg-white rounded-lg animate__animated animate__fadeIn animate__slow animate__delay-4s">
                                    <svg class="w-5 h-5 mr-2 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                    {feature}
                                </li>
                            ))}
                        </ul>
                        <a href="/contact" class="inline-block bg-purple-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-purple-700 transition-colors duration-300 animate__animated animate__fadeIn animate__slow animate__delay-5s">
                            Get Involved â†’
                        </a>
                    </div>
                ))}
            </div>
        </section>
    </main>
</Layout>

<style>
    .hero-bio {
		background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/product-hero.webp');
		background-size: cover;
		background-position: center;
		height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		color: white;
	}

   

</style>