---
import Layout from '../layouts/Layout.astro';

const programs = [
    {
        title: "Education & Awareness",
        description: "Comprehensive educational programs designed to increase understanding of sickle cell disease in schools, workplaces, and healthcare settings.",
        features: [
            "School Outreach Programs",
            "Healthcare Provider Training",
            "Community Workshops",
            "Educational Materials"
        ]
    },
    {
        title: "Support Groups",
        description: "Regular meetings and counseling sessions providing emotional support and practical advice for patients and families.",
        features: [
            "Monthly Support Meetings",
            "Family Counseling",
            "Peer Mentoring",
            "Crisis Support"
        ]
    },
    {
        title: "Medical Assistance",
        description: "Direct support for accessing medical care and treatment options for individuals with sickle cell disease.",
        features: [
            "Treatment Guidance",
            "Medical Bill Assistance",
            "Medication Support",
            "Emergency Care Access"
        ]
    },
    {
        title: "Research Initiatives",
        description: "Supporting and promoting research to improve treatments and find better solutions for sickle cell disease.",
        features: [
            "Research Grants",
            "Clinical Trial Information",
            "Data Collection",
            "Research Partnerships"
        ]
    }
];
---

<Layout title="Our Programs | Lewis Paul Foundation">
    <main>
        <section class="hero-section relative h-[60vh] flex items-center justify-center">
            <div class="absolute inset-0 bg-black/60 z-10"></div>
            <div class="relative z-20 text-center px-4 max-w-4xl mx-auto">
                <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
                    Our Programs
                </h1>
                <p class="text-xl md:text-2xl text-gray-200">
                    Making a Difference in the Sickle Cell Community
                </p>
            </div>
        </section>

        <section class="max-w-7xl mx-auto px-4 py-16">
            <div class="grid md:grid-cols-2 gap-8 -mt-32 relative z-30">
                 {programs.map((program, index) => (
                    <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10 hover:shadow-2xl transition-shadow duration-300">
                        <h2 class="text-2xl md:text-3xl font-bold text-purple-600 mb-4">{program.title}</h2>
                        <p class="text-gray-700 mb-6 leading-relaxed">{program.description}</p>
                        <ul class="space-y-2 mb-8">
                            {program.features.map(feature => (
                                <li class="flex items-center text-gray-700">
                                    <svg class="w-5 h-5 mr-2 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                    {feature}
                                </li>
                            ))}
                        </ul>
                        <a href="/contact" class="inline-block bg-purple-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-purple-700 transition-colors duration-300">
                            Get Involved →
                        </a>
                    </div>
                ))}
            </div>
        </section>
    </main>
</Layout>

<style>
    .hero-bio {
		background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/lewis-hero.jpg');
		background-size: cover;
		background-position: center;
		height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		color: white;
	}

   
    .tagline {
        font-size: 1.5rem;
    }

    .programs-content {
        padding: 4rem 1rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        gap: 2rem;
    }

    .program-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .program-card:hover {
        transform: translateY(-5px);
    }

    .program-info {
        padding: 2rem;
    }

    h2 {
        color: #e53e3e;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .description {
        color: #4a5568;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .features {
        list-style: none;
        padding: 0;
        margin-bottom: 2rem;
    }

    .features li {
        padding: 0.5rem 0;
        color: #2d3748;
        position: relative;
        padding-left: 1.5rem;
    }

    .features li::before {
        content: "•";
        color: #e53e3e;
        position: absolute;
        left: 0;
    }

    .learn-more {
        display: inline-block;
        color: #e53e3e;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .learn-more:hover {
        color: #c53030;
    }

    @media (min-width: 768px) {
        .container {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>