---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Programs from '../components/Programs.astro';
import Stats from '../components/Stats.astro';
import Contact from '../components/Contact.astro';
import { Newsletter } from '../components/Newsletter';
import { RecentDonors } from '../components/RecentDonors';
import { Patners } from '../components/Patners';
---

<Layout title="Lewis Paul Foundation | Sickle Cell Awareness">
	<main>
		<Hero />
		<About />
		<Programs />
		<Stats />
		<div class="py-16 bg-gradient-to-b from-gray-50 to-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex flex-col md:flex-row gap-12">
					<!-- Contact Form Section -->
					<div class="flex-1 md:w-2/3">
						<div class="bg-white rounded-2xl shadow-lg p-8">
							<Contact />
						</div>
					</div>

					<!-- Recent Donors Section -->
					<div class="md:w-1/3">
						<div class="bg-white rounded-2xl shadow-lg p-8">
							<h3 class="text-2xl font-semibold text-gray-800 mb-6">Recent Donors</h3>
							<RecentDonors client:only="react" />
						</div>
					</div>
				</div>
			</div>
		</div>
		<Newsletter client:load />
		<Patners client:load />
	</main>
</Layout>

<style>
	main {
		width: 100%;
		color: #2d3748;
		line-height: 1.6;
	}
</style>