---
import Layout from '../layouts/Layout.astro';
import RegisterForm from '../components/auth/RegisterForm';
---

<Layout title="Register | Lewis Paul Foundation">
  <main class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
    <div class="max-w-md w-full">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Create Account</h1>
        <p class="mt-2 text-gray-600">Join our community today</p>
      </div>
      
      <div class="bg-white p-8 rounded-lg shadow-md">
        <RegisterForm client:load />
        
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Already have an account?{' '}
            <a href="/login" class="text-red-600 hover:text-red-700 font-medium">
              Sign in here
            </a>
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>