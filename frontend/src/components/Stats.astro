---
const stats = [
    {
        number: "1000+",
        label: "Warriors Supported"
    },
    {
        number: "50+",
        label: "Educational Programs"
    },
    {
        number: "25+",
        label: "Support Groups"
    },
    {
        number: "100K+",
        label: "Raised for Research"
    }
];
---

<section class="stats">
    <div class="container">
        <div class="stats-grid">
            {stats.map(stat => (
                <div class="stat-card">
                    <div class="number">{stat.number}</div>
                    <div class="label">{stat.label}</div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .stats {
        background-color: #e53e3e;
        color: white;
        padding: 4rem 1rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        text-align: center;
    }

    .stat-card {
        padding: 1rem;
    }

    .number {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .label {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    @media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>