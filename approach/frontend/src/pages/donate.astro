---
import Layout from '../layouts/Layout.astro';
import DonationForm from '../components/DonationForm';
import { RecentDonors } from '../components/RecentDonors';

const donationTiers = [
  {
    name: "Friend",
    amount: "25",
    benefits: ["Support Educational Programs", "Monthly Newsletter", "Foundation Badge"]
  },
  {
    name: "Advocate",
    amount: "100",
    benefits: ["Friend Benefits", "Quarterly Impact Report", "Foundation T-Shirt"]
  },
  {
    name: "Champion",
    amount: "500",
    benefits: ["Advocate Benefits", "VIP Event Access", "Personal Impact Update", "Recognition on Website"]
  }
];
---

<Layout title="Donate | Lewis Paul Foundation">
  <main>
    <section class="donate-hero">
      <div class="hero-content">
        <h1>Make a Difference Today</h1>
        <p class="tagline">Your Support Powers Our Mission</p>
      </div>
    </section>

    <section class="donation-content">
      <div class="container">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="md:col-span-2">
            <div class="impact-section">
              <h2>Your Impact</h2>
              <div class="impact-grid">
                <div class="impact-card">
                  <h3>Medical Support</h3>
                  <p>Help provide medical assistance and treatment support for sickle cell warriors.</p>
                </div>
                <div class="impact-card">
                  <h3>Research</h3>
                  <p>Fund critical research initiatives to improve treatments and find better solutions.</p>
                </div>
                <div class="impact-card">
                  <h3>Education</h3>
                  <p>Support awareness programs and educational resources for communities.</p>
                </div>
              </div>
            </div>

            <div class="donation-form-section">
              <h2>Make Your Donation</h2>
              <div class="form-container">
                <DonationForm client:load />
              </div>
            </div>
          </div>
          
          <div>
            <div class="sticky top-24">
              <RecentDonors client:load />
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .donate-hero {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/donate-hero.jpg');
    background-size: cover;
    background-position: center;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    margin-top: 64px;
  }

  .hero-content {
    max-width: 800px;
    padding: 2rem;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: 1.5rem;
  }

  .donation-content {
    padding: 4rem 1rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .impact-section {
    margin-bottom: 4rem;
  }

  h2 {
    text-align: center;
    font-size: 2.5rem;
    color: #2d3748;
    margin-bottom: 2rem;
  }

  .impact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .impact-card {
    background: #f7fafc;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
  }

  .impact-card h3 {
    color: #e53e3e;
    margin-bottom: 1rem;
  }

  .donation-form-section {
    max-width: 800px;
    margin: 0 auto;
  }

  .form-container {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }
  }
</style>